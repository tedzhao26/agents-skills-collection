{
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "ENABLE_EXPERIMENTAL_MCP_CLI": "false"
  },
  "permissions": {
    "allow": [
      "Skill(openspec:proposal)",
      "Skill(openspec:proposal:*)",
      "Bash(openspec list:*)",
      "Bash(ls:*)",
      "Bash(openspec validate:*)",
      "Bash(openspec show:*)",
      "Skill(openspec:apply)",
      "Skill(openspec:apply:*)",
      "Bash(pip install:*)",
      "Bash(python -c:*)",
      "Bash(python3:*)",
      "Bash(uv sync:*)",
      "Bash(uv run python:*)",
      "Bash(LLM_MOCK_ENABLED=true uv run python:*)",
      "Bash(curl:*)",
      "Bash(lsof:*)",
      "Bash(kill:*)",
      "Bash(rm:*)"
    ],
    "deny": [
      "Write(~/.claude/plugins/cache/**)",
      "Edit(~/.claude/plugins/cache/**)",
      "MultiEdit(~/.claude/plugins/cache/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/protect-paths.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/keyword-detector.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/check-comments.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/todo-enforcer.py"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/skills/graph-loop/hooks/graph-loop-hook.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "deep-reading-analyst@Skill-Box": false,
    "ship-learn-next@Skill-Box": false,
    "algorithmic-art@Skill-Box": false,
    "elements-of-style@superpowers-marketplace": false,
    "superpowers-developing-for-claude-code@superpowers-marketplace": false,
    "superpowers-lab@superpowers-marketplace": false,
    "superpowers@superpowers-marketplace": true,
    "test-fixing@Skill-Box": false,
    "double-shot-latte@superpowers-marketplace": false,
    "git-pushing@Skill-Box": false,
    "obsidian@obsidian-skills": true,
    "python-development@claude-code-workflows": true,
    "unit-testing@claude-code-workflows": true,
    "vibe-coder-skills@agents-skills-collection": true,
    "claude-hud@claude-hud": true,
    "notion-skills@agents-skills-collection": true,
    "planning-with-files@planning-with-files": true,
    "tdd-workflows@claude-code-workflows": true,
    "claude-code-history-files-finder@daymade-skills": true,
    "claude-md-progressive-disclosurer@daymade-skills": true,
    "docs-cleaner@daymade-skills": true,
    "fact-checker@daymade-skills": true,
    "macos-cleaner@daymade-skills": true,
    "markdown-tools@daymade-skills": true,
    "mermaid-tools@daymade-skills": true,
    "pdf-creator@daymade-skills": true,
    "ppt-creator@daymade-skills": true,
    "prompt-optimizer@daymade-skills": true,
    "promptfoo-evaluation@daymade-skills": true,
    "skill-creator@daymade-skills": true,
    "skills-search@daymade-skills": true,
    "twitter-reader@daymade-skills": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "greptile@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "huggingface-skills@claude-plugins-official": true
  }
}
